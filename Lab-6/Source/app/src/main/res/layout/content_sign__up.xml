<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lab6.aishvwarya.mapcam.SignUpPage"
    tools:showIn="@layout/activity_sign__up">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Create New Account"
        android:textSize="24dp"
        android:background="@drawable/background"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:id="@+id/firstName"
        android:hint="First Name"
        android:layout_marginLeft="50dp"
        />
    <EditText
        android:layout_height="40dp"
        android:layout_marginTop="85dp"
        android:layout_width="200dp"
        android:id="@+id/lastName"
        android:hint="Last name"
        android:layout_marginLeft="50dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="115dp"
        android:id="@+id/address"
        android:hint="Address"
        android:layout_marginLeft="50dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="145dp"
        android:id="@+id/userName"
        android:hint="Username"
        android:backgroundTint="#C24641"
        android:shadowColor="#800517"
        android:selectAllOnFocus="false"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/pic"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/person"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Choose Photo"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:id="@+id/choosepic"
        android:onClick="choosePic"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="175dp"
        android:id="@+id/email"
        android:hint="Email"
        android:layout_marginLeft="50dp"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="205dp"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_marginLeft="50dp"
        android:password="true"
        />
    <Button
        android:id="@+id/signUp"
        android:layout_width="120dp"
        android:layout_marginLeft="110dp"
        android:gradientRadius="45"
        android:centerX="35%"
        android:centerY="50%"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Sign Up"
        />

</RelativeLayout>
